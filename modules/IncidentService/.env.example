# CityResQ360-DTUDZ - IncidentService Configuration

# Server
PORT=8005
NODE_ENV=development

# PostgreSQL Database
POSTGRES_HOST=postgres_incident
POSTGRES_PORT=5434
POSTGRES_DB=incident_service_db
POSTGRES_USER=cityresq
POSTGRES_PASSWORD=cityresq_password

# CoreAPI Integration (for JWT verification)
CORE_API_URL=http://core-api:8000
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# CoreAPI Database (for Sanctum token verification)
CORE_DB_HOST=mysql
CORE_DB_PORT=3306
CORE_DB_NAME=cityresq_db
CORE_DB_USER=cityresq
CORE_DB_PASSWORD=cityresq_password

# Auto-Dispatch Settings
AUTO_DISPATCH_ENABLED=true
AUTO_DISPATCH_RADIUS_KM=10
MAX_AGENCY_WORKLOAD=5

# SLA Monitoring
SLA_CHECK_INTERVAL_MINUTES=5
SLA_DEFAULT_HOURS=24
SLA_HIGH_PRIORITY_HOURS=12
SLA_CRITICAL_PRIORITY_HOURS=6

# RabbitMQ (for notifications)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=cityresq
RABBITMQ_PASSWORD=cityresq_password
RABBITMQ_EXCHANGE=cityresq.events
RABBITMQ_QUEUE=incident.notifications

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/incident-service.log
